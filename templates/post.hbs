<!doctype html>
<html lang="ja">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>{{page.title}} — {{site.title}}</title>
  <meta name="description" content="{{#if page.description}}{{page.description}}{{else}}{{site.description}}{{/if}}">

  <!-- Open Graph -->
  <meta property="og:site_name" content="{{site.title}}">
  <meta property="og:title" content="{{page.title}}">
  <meta property="og:description"
    content="{{#if page.description}}{{page.description}}{{else}}{{site.description}}{{/if}}">
  {{#if page.image}}
  <meta property="og:image" content="{{page.image}}">{{/if}}
  <meta property="og:url" content="{{page.url}}">
  <meta property="og:type" content="article">

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{page.title}}">
  <meta name="twitter:description"
    content="{{#if page.description}}{{page.description}}{{else}}{{site.description}}{{/if}}">
  {{#if page.image}}
  <meta name="twitter:image" content="{{page.image}}">{{/if}}

  <style>
    body {
      font-family: system-ui, sans-serif;
      max-width: 760px;
      margin: 3rem auto;
      padding: 0 1rem;
      color: #111
    }

    header {
      margin-bottom: 2rem
    }

    article img {
      max-width: 100%
    }

    footer {
      margin-top: 4rem;
      padding-top: 1rem;
      border-top: 1px solid #eee;
      color: #666
    }
  </style>
</head>

<body>
  <header>
    <h1><a href="{{site.baseUrl}}/">{{site.title}}</a></h1>
    <p>{{site.description}}</p>
  </header>

  <article>
    <h2>{{page.title}}</h2>
    <p style="color:#666;font-size:0.9rem">{{page.date}}</p>
    {{{page.contentHtml}}}
  </article>

  <footer>
    <p>© {{site.title}}</p>
  </footer>
</body>

</html>